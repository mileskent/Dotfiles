###########################
# xbindkeys configuration #
###########################

# Increase Volume
"pactl set-sink-volume @DEFAULT_SINK@ +1% && pkill -RTMIN+10 dwmblocks"
    Mod4 + k
"pactl set-sink-volume @DEFAULT_SINK@ +1% && pkill -RTMIN+10 dwmblocks"
    XF86AudioRaiseVolume

# Decrease Volume
"pactl set-sink-volume @DEFAULT_SINK@ -1% && pkill -RTMIN+10 dwmblocks"
    Mod4 + j
"pactl set-sink-volume @DEFAULT_SINK@ -1% && pkill -RTMIN+10 dwmblocks"
    XF86AudioLowerVolume

# Rectangular Screenshot
"scrot --select --line mode=edge -e 'xclip -selection clipboard -t image/png -i $f'"
    Shift+Alt + s


# Start firefox
"exec firefox"
    Shift+Alt + w
